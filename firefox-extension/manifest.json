{
    "manifest_version": 3,
    "name": "WebP to PNG Downloader",
    "description": "Basic extension that when enabled, it automatically downloads all the webP images as a PNG.",
    "version": "1.1",
    "background": {
        "scripts": [
            "service-worker.js"
        ]
    },
    "action": {
        "default_popup": "index.html"
    },
    "icons": {
        "48": "extension_icon.png"
    },
    "permissions": [
        "downloads"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}